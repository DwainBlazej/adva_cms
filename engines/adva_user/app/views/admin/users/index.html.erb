<% @users.each do |user| -%>
	<ul id="users">
	  <% content_tag(:li, :id =>"user_#{user.id}") do -%>
		  <%= gravatar_img(user) %>
		  <h4><%= link_to user.name, admin_user_path(@site, user) %></h4>
		  <p><%= user.email %></p>
		  <p class="actions">
		    <%= link_to t(:'adva.links.edit'), edit_admin_user_path(@site, user), :class => 'edit' %>
		  </p>
		<% end -%>
	</ul>
<% end -%>

<%= will_paginate @users, :id => 'pagination' %>
