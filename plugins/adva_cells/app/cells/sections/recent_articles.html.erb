<% unless @recent_section_articles.empty? %>
  <div id="recent_section_articles_cell" class="cell recent_section_articles">
    <h2><%= @opts[:title] || I18n.t(:'headings.recent_articles', :count => @recent_section_articles.size) %></h2>
  	<ul>
  	<% @recent_section_articles.each do |article| %>
  	  <li><%= link_to_content(article) %></li>
  	<% end %>
  	</ul>
  </div>
<% end %>